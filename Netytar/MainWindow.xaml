<Window
    x:Class="Netytar.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tobii="clr-namespace:Tobii.Interaction.Wpf;assembly=Tobii.Interaction.Net"
    Title="MainWindow"
    Width="Auto"
    Height="Auto"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/DarkWood.png" TileMode="Tile" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*" />
            <ColumnDefinition Width="637*" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="0"
            Width="Auto"
            Height="Auto"
            Margin="15,76,15,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderBrush="White"
            BorderThickness="4">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Backgrounds/LightWood.jpg" TileMode="Tile" />
            </Border.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="58*" />
                    <RowDefinition Height="58*" />
                    <RowDefinition Height="80*" />
                    <RowDefinition Height="51*" />
                    <RowDefinition Height="66*" />
                    <RowDefinition Height="59*" />
                    <RowDefinition Height="58*" />
                    <RowDefinition Height="59*" />
                </Grid.RowDefinitions>


                <!--  START AND BLOWMETER  -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="1"
                        Width="Auto"
                        Height="Auto"
                        Margin="5,5,5,5"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2">
                        <Button
                            x:Name="btnStart"
                            Width="Auto"
                            Height="Auto"
                            Click="StartNetytar"
                            Content="Start"
                            FontFamily="Magneto"
                            FontSize="22"
                            Foreground="White"
                            IsCancel="True">
                            <Button.Background>
                                <ImageBrush
                                    ImageSource="Images/Backgrounds/MidWood.png"
                                    Stretch="None"
                                    TileMode="Tile" />
                            </Button.Background>
                        </Button>
                    </Border>
                    <Border
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        Margin="5,5,5,5"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2">
                        <Button
                            Name="btnExit"
                            Width="Auto"
                            Height="Auto"
                            Click="btnExit_Click"
                            Content="Exit"
                            FontFamily="Magneto"
                            FontSize="22"
                            Foreground="White"
                            IsCancel="True">
                            <!--  tobii:Behaviors.IsGazeAware="True"  -->

                            <Button.Background>
                                <ImageBrush
                                    ImageSource="Images/Backgrounds/MidWood.png"
                                    Stretch="None"
                                    TileMode="Tile" />
                            </Button.Background>
                        </Button>
                    </Border>
                </Grid>


                <!--  EXIT AND SCALE SELECTOR  -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Name="VelocityBarBorder"
                        Grid.Column="1"
                        Width="Auto"
                        Height="Auto"
                        Margin="5,5,5,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="Black"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="0">
                        <Border
                            Name="VelocityBar"
                            Width="Auto"
                            Height="10"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Bottom"
                            Background="LightGreen"
                            BorderThickness="0"
                            CornerRadius="0">
                            <!--Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="LightCoral" Offset="0.0"></GradientStop>
                                    <GradientStop Color="DarkRed" Offset="0.6"></GradientStop>
                                </LinearGradientBrush>

                            </Border.Background-->
                        </Border>
                    </Border>
                    <Border
                        Name="MaxBar"
                        Grid.Column="1"
                        Width="Auto"
                        Height="Auto"
                        Margin="5,5,5,5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Bottom"
                        Background="Transparent"
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="0" />
                    <ListBox
                        x:Name="lstScaleChanger"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        Margin="5,5,5,5"
                        Background="Black"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2"
                        Foreground="WhiteSmoke"
                        SelectionChanged="LstScaleChanger_SelectionChanged" />
                </Grid>


                <!--  CONTROL SELECTORS  -->
                <Grid Grid.Row="2" Margin="10,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Button
                        Name="btnCtrlKeyboard"
                        Grid.Row="0"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderBrush="White"
                        BorderThickness="2"
                        Click="btnCtrlKeyboard_Click">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Images/Backgrounds/MidWood.png"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>
                    </Button>
                    <Button
                        Name="btnCtrlBreath"
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderBrush="White"
                        BorderThickness="2"
                        Click="btnCtrlBreath_Click">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Images/Backgrounds/MidWood.png"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>
                    </Button>
                    
                    <Button
                        Name="btnCtrlEyePos"
                        Grid.Row="2"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderBrush="White"
                        BorderThickness="2"
                        Click="btnCtrlEyePos_Click">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Images/Backgrounds/MidWood.png"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>
                    </Button>
                    
                    <Button
                        Name="btnCtrlEyeVel"
                        Grid.Row="3"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderBrush="White"
                        BorderThickness="2"
                        Click="btnCtrlEyeVel_Click">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Images/Backgrounds/MidWood.png"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>
                    </Button>
                    <Border
                        Name="indCtrlKeyboard"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="20"
                        Height="20"
                        Margin="4,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Background="Black"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="10" />
                    <Border
                        Name="indCtrlBreath"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="20"
                        Height="20"
                        Margin="4,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Background="Black"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="10" />
                    <Border
                        Name="indCtrlEyePos"
                        Grid.Row="2"
                        Grid.Column="1"
                        Width="20"
                        Height="20"
                        Margin="4,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Background="Black"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="10" />
                    <Border
                        Name="indCtrlEyeVel"
                        Grid.Row="3"
                        Grid.Column="1"
                        Width="20"
                        Height="20"
                        Margin="4,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Background="Black"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="10" />
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="22,0,0,0"
                        Content="Keyboard"
                        FontFamily="Magneto"
                        FontSize="13"
                        Foreground="White" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="22,0,0,0"
                        Content="Breath"
                        FontFamily="Magneto"
                        FontSize="13"
                        Foreground="White" />
                    <Label
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="22,0,0,0"
                        Content="EyePos"
                        FontFamily="Magneto"
                        FontSize="13"
                        Foreground="White" />
                    <Label
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="22,0,0,0"
                        Content="EyeVel"
                        FontFamily="Magneto"
                        FontSize="13"
                        Foreground="White" />
                </Grid>


                <!--  BREATH SENSOR PORT SELECTION ROW  -->
                <Grid Grid.Row="3" Margin="5,5,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Width="Auto"
                        Height="60"
                        Margin="1,1,1,1"
                        Background="Black"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2"
                        Visibility="Visible">
                        <Button
                            Name="btnSensorPortMinus"
                            Width="Auto"
                            Height="Auto"
                            Margin="0,0,0,0"
                            Click="btnSensorPortMinus_Click"
                            Content="t"
                            FontFamily="Wingdings 3"
                            FontSize="30"
                            Foreground="White"
                            IsCancel="True">
                            <Button.Background>
                                <ImageBrush
                                    ImageSource="Images/Backgrounds/DarkWood.png"
                                    Stretch="None"
                                    TileMode="Tile" />
                            </Button.Background>
                        </Button>
                    </Border>
                    <Border
                        Grid.Column="1"
                        Width="Auto"
                        Height="60"
                        Margin="1,1,1,1"
                        Background="Black"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2"
                        Visibility="Visible">
                        <TextBlock
                            Name="txtSensorPort"
                            Margin="0,14,0,0"
                            Background="Black"
                            FontFamily="Digital-7 Italic"
                            FontSize="25"
                            Foreground="LightCoral"
                            Text=""
                            TextAlignment="Center" />
                    </Border>
                    <Border
                        Grid.Column="2"
                        Width="Auto"
                        Height="60"
                        Margin="1,1,1,1"
                        Background="Black"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2"
                        Visibility="Visible">
                        <Button
                            Name="btnSensorPortPlus"
                            Width="Auto"
                            Height="Auto"
                            Margin="0,0,0,0"
                            Click="btnSensorPortPlus_Click"
                            Content="u"
                            FontFamily="Wingdings 3"
                            FontSize="30"
                            Foreground="White"
                            IsCancel="True">
                            <Button.Background>
                                <ImageBrush
                                    ImageSource="Images/Backgrounds/DarkWood.png"
                                    Stretch="None"
                                    TileMode="Tile" />
                            </Button.Background>
                        </Button>
                    </Border>

                </Grid>


                <!--  MIDI CHANNEL SELECTOR  -->
                <Grid Grid.Row="4" Margin="5,1,5,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Width="Auto"
                        Height="60"
                        Margin="1,1,1,1"
                        Background="Black"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2">
                        <Button
                            x:Name="btnMIDIchMinus"
                            Width="Auto"
                            Height="Auto"
                            Margin="0,1,1,0"
                            Click="btnMIDIchMinus_Click"
                            Content="t"
                            FontFamily="Wingdings 3"
                            FontSize="30"
                            Foreground="White"
                            IsCancel="True">
                            <Button.Background>
                                <ImageBrush
                                    ImageSource="Images/Backgrounds/DarkWood.png"
                                    Stretch="None"
                                    TileMode="Tile" />
                            </Button.Background>
                        </Button>
                    </Border>
                    <Border
                        Grid.Column="1"
                        Width="Auto"
                        Height="60"
                        Margin="1,1,1,1"
                        Background="Black"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2">
                        <TextBlock
                            Name="lblMIDIch"
                            Margin="0,10,0,0"
                            Background="Black"
                            FontFamily="Digital-7 Italic"
                            FontSize="28"
                            Foreground="LightCoral"
                            Text="MP1"
                            TextAlignment="Center" />
                    </Border>
                    <Border
                        Grid.Column="2"
                        Width="Auto"
                        Height="60"
                        Margin="1,1,1,1"
                        Background="Black"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2">
                        <Button
                            x:Name="btnMIDIchPlus"
                            Width="Auto"
                            Height="Auto"
                            Click="btnMIDIchPlus_Click"
                            Content="u"
                            FontFamily="Wingdings 3"
                            FontSize="30"
                            Foreground="White"
                            IsCancel="True">
                            <Button.Background>
                                <ImageBrush
                                    ImageSource="Images/Backgrounds/DarkWood.png"
                                    Stretch="None"
                                    TileMode="Tile" />
                            </Button.Background>
                        </Button>
                    </Border>
                </Grid>


                <!--  INDICATORS  -->
                <Grid Grid.Row="5" Margin="5,1,5,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.Column="0"
                        Width="Auto"
                        Height="60"
                        Margin="1,1,1,1"
                        Background="Black"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2">
                        <TextBlock
                            x:Name="txtPitch"
                            Margin="0,10,0,0"
                            Background="Black"
                            FontFamily="Digital-7 Italic"
                            FontSize="35"
                            Foreground="LightCoral"
                            Text="60"
                            TextAlignment="Center" />
                    </Border>
                    <Border
                        Grid.Column="2"
                        Width="Auto"
                        Height="60"
                        Margin="1,1,1,1"
                        Background="Black"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2">
                        <TextBlock
                            x:Name="txtIsBlowing"
                            Margin="0,10,0,0"
                            Background="Black"
                            FontFamily="Digital-7 Italic"
                            FontSize="35"
                            Foreground="LightCoral"
                            Text="_"
                            TextAlignment="Center" />
                    </Border>
                    <Border
                        Grid.Column="1"
                        Width="Auto"
                        Height="60"
                        Margin="1,1,1,1"
                        Background="Black"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2">
                        <TextBlock
                            x:Name="txtNoteName"
                            Margin="0,10,0,0"
                            Background="Black"
                            FontFamily="Digital-7 Italic"
                            FontSize="35"
                            Foreground="LightCoral"
                            Text="C"
                            TextAlignment="Center" />
                    </Border>
                </Grid>

                <!--  MODULATION AND SWITCHES  -->
                <Grid Grid.Row="6" Margin="10,10,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Button
                        Name="btnModulationControlSwitch"
                        Grid.Row="0"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderBrush="White"
                        BorderThickness="2"
                        Click="btnModulationControlSwitch_Click">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Images/Backgrounds/MidWood.png"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>
                    </Button>
                    <Button
                        Name="btnBreathControlSwitch"
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderBrush="White"
                        BorderThickness="2"
                        Click="btnBreathControlSwitch_Click">
                        <Button.Background>
                            <ImageBrush
                                ImageSource="Images/Backgrounds/MidWood.png"
                                Stretch="None"
                                TileMode="Tile" />
                        </Button.Background>
                    </Button>

                    <Border
                        Name="indModulationControl"
                        Grid.Row="0"
                        Grid.Column="1"
                        Width="20"
                        Height="20"
                        Margin="4,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Background="Black"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="10" />
                    <Border
                        Name="indBreathSwitch"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="20"
                        Height="20"
                        Margin="4,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Stretch"
                        Background="Black"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="10" />

                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="22,0,0,0"
                        Content="Mod"
                        FontFamily="Magneto"
                        FontSize="18"
                        Foreground="White" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="22,0,0,0"
                        Content="BSwitch"
                        FontFamily="Magneto"
                        FontSize="18"
                        Foreground="White" />
                    

                </Grid>

                <!--  HEAD POSITION LABELS  -->
                <!--Border Grid.Row ="6" BorderThickness="2" BorderBrush="White" Margin="5,1,5,1">
                    <Grid Grid.Row="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Name="txtEyePosX" Grid.Row="0" Background="Black" Foreground="White" Text="X"/>
                        <TextBlock Name="txtEyePosY" Grid.Row="1" Background="Black" Foreground="White" Text="Y"/>
                        <TextBlock Name="txtEyePosZ" Grid.Row="2" Background="Black" Foreground="White" Text="Z"/>
                    </Grid>
                </Border-->

                <!--  BUTTONS FOR TESTS  -->
                <!--Grid Grid.Row="6" Margin="5,1,5,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width = "1*"/>
                        <ColumnDefinition Width = "1*"/>
                        <ColumnDefinition Width = "1*"/>
                    </Grid.ColumnDefinitions>

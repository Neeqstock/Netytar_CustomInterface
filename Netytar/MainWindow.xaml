                            <Button.Background>
                                <ImageBrush ImageSource="Images/Backgrounds/DarkWood.png" TileMode="Tile" Stretch="None"></ImageBrush>
                            </Button.Background>
                        </Button>
                    </Border>
                </Grid-->

                <Grid Grid.Row="7" Margin="10,10,10,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Slider
                        Grid.Row="0"
                        Name="sldDistance"
                        HorizontalAlignment="Stretch"
                        Minimum="50"
                        Maximum="400"
                        Thumb.DragCompleted="sldDistance_DragCompleted" Height="18" Margin="0,0,-0.2,0" Grid.RowSpan="2" VerticalAlignment="Top" RenderTransformOrigin="0.501,0.5" 
                        
                     />
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button
                        Name="btnRemoveSharps"
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderBrush="White"
                        BorderThickness="2"
                        Click="btnRemoveSharps_Click"   >
                            <Button.Background>
                                <ImageBrush
                                ImageSource="Images/Backgrounds/MidWood.png"
                                Stretch="None"
                                TileMode="Tile" />
                            </Button.Background>
                        </Button>
                        <Border
                            Name="indShowSharps"
                            Grid.Column="1"
                            Width="20"
                            Height="20"
                            Margin="4,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"
                            Background="Black"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="10" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="22,0,0,0"
                            Content="Sharp notes"
                            FontFamily="Magneto"
                            FontSize="18"
                            Foreground="White" />
                        
                    </Grid>
                    
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button
                        Name="btnBlinkSelectScale"
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="Auto"
                        Height="Auto"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        BorderBrush="White"
                        BorderThickness="2"
                        Click="btnBlinkSelectScale_Click"   >
                            <Button.Background>
                                <ImageBrush
                                ImageSource="Images/Backgrounds/MidWood.png"
                                Stretch="None"
                                TileMode="Tile" />
                            </Button.Background>
                        </Button>
                        <Border
                            Name="indBlinkSelectScale"
                            Grid.Column="1"
                            Width="20"
                            Height="20"
                            Margin="4,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"
                            Background="Black"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="10" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="22,0,0,0"
                            Content="Blink scale"
                            FontFamily="Magneto"
                            FontSize="18"
                            Foreground="White" />
                        
                    </Grid>
                </Grid>
                


                <!--  CALIBRATOR FOR EYECONTROL  -->
                <Grid Grid.Row="7" Margin="5,1,5,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <!--Border
                        Grid.Column="1"
                        Width="Auto"
                        Height="Auto"
                        BorderBrush="WhiteSmoke"
                        BorderThickness="2"
                        Visibility="Visible">
                        <Button
                            Name="btnCalibrateHeadPose"
                            Width="Auto"
                            Height="Auto"
                            Content=""
                            FontFamily="Magneto"
